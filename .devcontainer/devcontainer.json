{
  "name": "Next.js Dev",
  "dockerComposeFile": "compose.yml",
  "service": "nextjs",
  "workspaceFolder": "/workspace",
  "onCreateCommand": {
    "setup-git": "git config --global user.name \"$GIT_USER_NAME\" && git config --global user.email \"$GIT_USER_EMAIL\""
  },
  "postCreateCommand": "chmod +x .devcontainer/entrypoint.sh && .devcontainer/entrypoint.sh",
  "customizations": {
    "vscode": {
      "settings": {
        "editor.defaultFormatter": "biomejs.biome",
        "editor.codeActionsOnSave": {
          "source.fixAll.biome": "explicit",
          "source.organizeImports.biome": "explicit"
        },
        "editor.formatOnSave": true,
        "biome.lspBin": "/app/node_modules/@biomejs/biome/bin/biome"
      },
      "extensions": [
        "biomejs.biome",
        "bradlc.vscode-tailwindcss",
        "eamodio.gitlens",
        "shardulm94.trailing-spaces"
      ]
    }
  },
  "forwardPorts": [
    3000
  ],
  "remoteUser": "appuser"
}